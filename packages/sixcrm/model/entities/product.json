{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "model/entities/product.json",
	"title": "Product",
	"type": "object",
	"description": "A product",
	"properties": {
		"id": {
			"$ref": "../definitions/uuidv4.json"
		},
		"name": {
			"type": "string",
			"minLength": 3
		},
		"description": {
			"type": "string"
		},
		"sku": {
			"anyOf": [
				{
					"type": "null"
				},
				{
					"type": "string",
					"minLength": 3
				}
			]
		},
		"ship": {
			"type": "boolean"
		},
		"merchantprovidergroup": {
			"$ref": "../definitions/uuidv4.json"
		},
		"fulfillment_provider": {
			"$ref": "../definitions/uuidv4.json"
		},
		"price": {
			"$ref": "../definitions/currency.json"
		},
		"account_id": {
			"$ref": "../definitions/sixcrmaccountidentifier.json"
		}
	},
	"required": [
		"name",
		"account_id",
		"created_at",
		"updated_at"
	]
}
