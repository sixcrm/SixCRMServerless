{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "model/transaction/amount.json",
	"title": "Amount",
	"anyOf": [
		{
			"type": "string",
			"pattern": "^\\${0,1}[0-9]+\\.[0-9]{2}$"
		},
		{
			"type": "number",
			"minimum": 0.01
		},
		{
			"$ref": "../definitions/currency.json"
		}
	]
}