{
  "compilerOptions": {
	"module": "commonjs",
	"target": "es6",
	"rootDir": "./src",
	"outDir": "./build",
	"lib": [ "es2017", "esnext.asynciterable" ],
	"moduleResolution": "node",
	"sourceMap": true,
	"noImplicitAny": true,
	"preserveConstEnums": true,
	"suppressImplicitAnyIndexErrors": true
  },
  "exclude": [ "build"]
}
