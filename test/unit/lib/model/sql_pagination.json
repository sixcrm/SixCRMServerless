{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "test/unit/lib/model/sql_pagination.json",
  "title": "Pagination",
  "type": "object",
  "properties": {
    "order": {
      "type": "string",
      "pattern": "asc|desc"
    },
    "limit": {
      "type": "number",
      "minimum": 0
    },
    "offset": {
      "type": "number",
      "minimum": 0
    },
    "count": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "order",
    "limit",
    "offset",
    "count"
  ]
}
