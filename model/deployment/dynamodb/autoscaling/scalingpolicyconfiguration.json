{
  "id":"/deployment/dynamodb/autoscaling/scalingpolicyconfiguration.json",
  "title":"DynamoDB Table Autoscaling Scaling Policy Configuration",
  "type":"object",
  "properties":{
    "ResourceId":{
      "anyOf":[
        {
          "type":"string",
          "pattern":"^table/[a-zA-Z]+$"
        },
        {
          "type":"string",
          "pattern":"^table/[a-zA-Z]+/index/.*$"
        }
      ]
    },
    "PolicyName":{
      "type":"string"
    },
    "PolicyType": {
      "type":"string",
      "enum":["TargetTrackingScaling"]
    },
    "ScalableDimension": {
      "type":"string",
      "enum":["dynamodb:table:WriteCapacityUnits","dynamodb:table:ReadCapacityUnits", "dynamodb:index:WriteCapacityUnits", "dynamodb:index:ReadCapacityUnits"]
    },
    "ServiceNamespace": {
      "type":"string",
      "enum":["dynamodb"]
    },
    "TargetTrackingScalingPolicyConfiguration": {
      "type":"object",
      "properties":{
        "PredefinedMetricSpecification": {
          "type":"object",
          "properties":{
            "PredefinedMetricType":{
              "type":"string",
              "enum":["DynamoDBWriteCapacityUtilization","DynamoDBReadCapacityUtilization"]
            }
          },
          "required":["PredefinedMetricType"]
        },
        "ScaleInCooldown": {"$ref":"../../../definitions/nonnegativeinteger.json"},
        "ScaleOutCooldown": {"$ref":"../../../definitions/nonnegativeinteger.json"},
        "TargetValue": {"$ref":"../../../definitions/float.json"},
        "DisableScaleIn":{
          "type":"boolean",
          "enum":[false]
        }
      },
      "required":["PredefinedMetricSpecification", "ScaleInCooldown", "ScaleOutCooldown", "TargetValue"]
    }
  },
  "required":["ResourceId", "PolicyName", "PolicyType", "ScalableDimension", "ServiceNamespace", "TargetTrackingScalingPolicyConfiguration"]
}
