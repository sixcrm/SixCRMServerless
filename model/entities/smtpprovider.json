{
	"$schema": "http://json-schema.org/schema#",
	"id":"/smtpprovider",
	"title": "SMTP Provider",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "../definitions/uuidv4.json"},
		"ISO8601": {"$ref": "../definitions/iso8601.json"},
		"SixAccountIdentifier":{"$ref": "../definitions/sixcrmidentifier.json"}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"name":{
			"type":"string"
		},
		"hostname":{
			"anyOf":[
				{"type":"string", "format":"hostname"},
				{"type":"string", "format":"ipv4"},
				{"type":"string", "format":"ipv6"}
			]
		},
		"username":{
			"type":"string",
			"minLength":3
		},
		"password":{
			"type":"string",
			"minLength":3
		},
		"port":{
			"type":"integer",
			"minimum": 0,
			"exclusiveMinimum": false
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["account", "hostname", "username", "password", "created_at", "updated_at"]
}
