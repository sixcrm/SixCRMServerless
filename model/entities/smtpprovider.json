{
	"$schema": "http://json-schema.org/schema#",
	"id":"/smtpprovider",
	"title": "SMTP Provider",
	"type": "object",
	"properties": {
		"id":{"$ref": "../definitions/uuidv4.json"},
		"account":{"$ref": "../definitions/sixcrmidentifier.json"},
		"name":{
			"type":"string"
		},
		"hostname":{
			"anyOf":[
				{"type":"string", "format":"hostname"},
				{"type":"string", "format":"ipv4"},
				{"type":"string", "format":"ipv6"}
			]
		},
		"username":{
			"type":"string",
			"minLength":3
		},
		"password":{
			"type":"string",
			"minLength":3
		},
		"port":{"$ref": "../definitions/nonnegativeinteger.json"},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["account", "hostname", "username", "password", "created_at", "updated_at"]
}
