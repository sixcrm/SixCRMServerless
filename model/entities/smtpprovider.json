{
	"$schema": "http://json-schema.org/schema#",
	"id":"/smtpprovider",
	"title": "SMTP Provider",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		},
		"SixAccountIdentifier":{
			"anyOf":[
				{"$ref": "#/definitions/UUIDv4"},
				{"type":"string", "enum":["*"]}
			]
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"name":{
			"type":"string"
		},
		"hostname":{
			"anyOf":[
				{"type":"string", "format":"hostname"},
				{"type":"string", "format":"ipv4"},
				{"type":"string", "format":"ipv6"}
			]
		},
		"username":{
			"type":"string",
			"minLength":3
		},
		"password":{
			"type":"string",
			"minLength":3
		},
		"port":{
			"type":"integer",
			"minimum": 0,
			"exclusiveMinimum": false
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["account", "hostname", "username", "password", "created_at", "updated_at"]
}
