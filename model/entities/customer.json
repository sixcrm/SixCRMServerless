{
	"$schema": "http://json-schema.org/schema#",
	"id":"/customer",
	"title": "Customer",
	"type": "object",
	"properties": {
		"id":{"$ref": "../definitions/uuidv4.json"},
		"account":{"$ref": "../definitions/sixcrmidentifier.json"},
		"email":{
			"type":"string",
			"format":"email"
		},
		"firstname":{
			"type":"string",
			"minLength": 1
		},
		"lastname":{
			"type":"string",
			"minLength": 1
		},
		"phone":{
			"type":"string"
		},
		"address":{
			"type":"object",
			"properties": {
				"line1":{
					"type":"string"
				},
				"line2":{
					"type":"string"
				},
				"city":{
					"type":"string"
				},
				"state":{
					"type":"string"
				},
				"zip":{
					"type":"string"
				},
				"country":{
					"type":"string"
				}
			},
			"required":["line1","city","state","zip","country"]
		},
		"creditcards":{
			"type":"array",
			"items":{"$ref": "../definitions/uuidv4.json"}
		},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["account", "firstname", "lastname", "address", "email", "created_at", "updated_at"]
}
