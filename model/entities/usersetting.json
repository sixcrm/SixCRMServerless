{
	"$schema": "http://json-schema.org/schema#",
	"id":"/usersetting",
	"title": "User Setting",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		}
	},
	"properties": {
		"id":{
			"type":"string",
			"format":"email"
		},
		"work_phone":{
			"type":"string"
		},
		"cell_phone":{
			"type":"string"
		},
		"timezone":{
			"type":"string"
		},
		"notifications":{
			"type":"array",
			"items":{
				"type":"object",
				"properties":{
					"name":{
						"type":"string"
					},
					"receive":{
						"type":"boolean"
					},
					"data":{
						"type":"string"
					}
				}
			}
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "notifications","created_at", "updated_at"]
}
