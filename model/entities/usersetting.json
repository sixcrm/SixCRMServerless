{
	"$schema": "http://json-schema.org/schema#",
	"id":"/usersetting",
	"title": "User Setting",
	"description": "Settings related to a user",
	"type": "object",
	"properties": {
		"id":{"$ref": "../definitions/useridentifier.json"},
		"work_phone":{"$ref": "../definitions/phone.json"},
		"cell_phone":{"$ref": "../definitions/phone.json"},
		"timezone":{"$ref": "../definitions/timezone.json"},
		"language":{"$ref": "../definitions/language.json"},
		"notifications":{
			"type":"array",
			"items":{
				"type":"object",
				"properties":{
					"name":{
						"type":"string"
					},
					"receive":{
						"type":"boolean"
					},
					"data":{
						"type":"string"
					}
				}
			}
		},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["id", "notifications","created_at", "updated_at"]
}
