{
	"$schema": "http://json-schema.org/schema#",
	"id":"/usersetting",
	"title": "User Setting",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "model/definitions/uuidv4.json"},
		"ISO8601": {"$ref": "model/definitions/iso8601.json"}
	},
	"properties": {
		"id":{
			"type":"string",
			"format":"email"
		},
		"work_phone":{
			"type":"string"
		},
		"cell_phone":{
			"type":"string"
		},
		"timezone":{
			"type":"string"
		},
		"notifications":{
			"type":"array",
			"items":{
				"type":"object",
				"properties":{
					"name":{
						"type":"string"
					},
					"receive":{
						"type":"boolean"
					},
					"data":{
						"type":"string"
					}
				}
			}
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "notifications","created_at", "updated_at"]
}
