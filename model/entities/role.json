{
	"$schema": "http://json-schema.org/schema#",
	"id":"/role",
	"title": "Role",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "../definitions/uuidv4.json"},
		"ISO8601": {"$ref": "../definitions/iso8601.json"}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"name":{
			"type": "string"
		},
		"active":{
			"type":"boolean"
		},
		"permissions":{
			"type":"object",
			"properties":{
				"allow":{
					"type":"array",
					"items":{
						"type":"string"
					}
				},
				"deny":{
					"type":"array",
					"items":{
						"type":"string"
					}
				}
			}
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["name", "active", "created_at", "updated_at"]
}
