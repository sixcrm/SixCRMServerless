{
	"$schema": "http://json-schema.org/schema#",
	"id":"/rebill",
	"title": "Rebill",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "../definitions/uuidv4.json"},
		"ISO8601": {"$ref": "../definitions/iso8601.json"},
		"OptionalUUIDv4":{"$ref": "../definitions/optionaluuidv4.json"},
		"SixAccountIdentifier":{"$ref": "../definitions/sixcrmidentifier.json"}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"amount":{
			"type":["string","number"]
		},
		"bill_at":{"$ref": "#/definitions/ISO8601"},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"},
		"parentsession":{"$ref": "#/definitions/UUIDv4"},
		"processing":{
			"type":["string", "boolean"]
		},
		"product_schedules":{
			"type":"array",
			"items":{"$ref": "#/definitions/UUIDv4"}
		},
		"transactions":{
			"type":"array",
			"items":{"$ref": "#/definitions/UUIDv4"}
		}

	},
	"required":["account", "amount", "bill_at", "created_at", "updated_at", "parentsession", "product_schedules"]
}
