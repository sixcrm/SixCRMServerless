{
	"$schema": "http://json-schema.org/schema#",
	"id":"/SixCRMTrackerObject",
	"title": "Tracker",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "model/definitions/uuidv4.json"},
		"ISO8601": {"$ref": "model/definitions/iso8601.json"},
		"OptionalUUIDv4":{"$ref": "model/definitions/optionaluuidv4.json"},
		"SixAccountIdentifier":{"$ref": "model/definitions/sixcrmidentifier.json"}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"affiliates":{
			"type":"array",
			"items":{"$ref": "#/definitions/UUIDv4"}
		},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"type":{
			"type":"string",
			"enum":["postback","html"]
		},
		"event_type":{
			"type":"array",
			"items":{
				"type":"string",
				"enum":["click","lead","main","upsell","confirm"]
			}
		},
		"name":{
			"type":"string"
		},
		"body":{
			"type":"string"
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "account", "type", "name", "body", "created_at", "updated_at"]
}
