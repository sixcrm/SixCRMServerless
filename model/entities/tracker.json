{
	"$schema": "http://json-schema.org/schema#",
	"id":"/SixCRMTrackerObject",
	"title": "Tracker",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		},
		"OptionalUUIDv4":{
			"anyOf":[
				{"type":"string", "enum":[""]},
				{"$ref": "#/definitions/UUIDv4"}
			]
		},
		"SixAccountIdentifier":{
			"anyOf":[
				{"$ref": "#/definitions/UUIDv4"},
				{"type":"string", "enum":["*"]}
			]
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"affiliate":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"type":{
			"type":"string",
			"enum":["postback","html"]
		},
		"body":{
			"type":"string"
		},
		"created_at":{
			"type":{"$ref": "#/definitions/ISO8601"}
		},
		"updated_at":{
			"type":{"$ref": "#/definitions/ISO8601"}
		}
	},
	"required":["id", "affiliate", "account", "type", "body", "created_at", "updated_at"]
}
