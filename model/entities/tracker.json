{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id":"/tracker",
	"title": "Tracker",
	"type": "object",
	"description": "A tracker",
	"properties": {
		"id":{"$ref": "../definitions/uuidv4.json"},
		"affiliates":{
			"type":"array",
			"items":{"$ref": "../definitions/uuidv4.json"}
		},
		"campaigns":{
			"type":"array",
			"items":{"$ref": "../definitions/uuidv4.json"}
		},
		"account":{"$ref": "../definitions/sixcrmaccountidentifier.json"},
		"type":{
			"type":"string",
			"enum":["postback","html"]
		},
		"event_type":{
			"type":"array",
			"items":{
				"type":"string",
				"enum":["click","lead","main","upsell","confirm"]
			}
		},
		"name":{
			"type":"string"
		},
		"body":{
			"type":"string"
		},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["id", "account", "type", "name", "body", "created_at", "updated_at"]
}
