{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "model/entities/emailtemplate.json",
	"title": "Email Template",
	"type": "object",
	"properties": {
		"id": {
			"$ref": "../definitions/uuidv4.json"
		},
		"account": {
			"$ref": "../definitions/sixcrmaccountidentifier.json"
		},
		"name": {
			"type": "string",
			"minLength": 3
		},
		"body": {
			"type": "string"
		},
		"subject": {
			"type": "string"
		},
		"type": {
			"type": "string"
		},
		"smtp_provider": {
			"$ref": "../definitions/uuidv4.json"
		},
		"products": {
		  "type": "array",
		  "items": {
			"$ref": "../definitions/uuidv4.json"
		  }
		},
		"product_schedules": {
		  "type": "array",
		  "items": {
			"$ref": "../definitions/uuidv4.json"
		  }
		},
		"campaigns": {
		  "type": "array",
		  "items": {
			"$ref": "../definitions/uuidv4.json"
		  }
		},
		"cycle": {
		  "type": "number"
		},
		"created_at": {
			"$ref": "../definitions/iso8601.json"
		},
		"updated_at": {
			"$ref": "../definitions/iso8601.json"
		}
	},
	"required": [
		"account",
		"name",
		"subject",
		"type",
		"created_at",
		"updated_at"
	]
}
