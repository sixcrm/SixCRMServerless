{
	"$schema": "http://json-schema.org/schema#",
	"id":"/campaign",
	"title": "Campaign",
	"type": "object",
	"description": "A single campaign",
	"properties": {
		"id":{"$ref": "../definitions/uuidv4.json"},
		"account":{"$ref": "../definitions/sixcrmidentifier.json"},
		"allow_prepaid":{
			"type":"boolean"
		},
		"show_prepaid":{
			"type":"boolean"
		},
		"name":{
			"type":"string",
			"minLength":3
		},
		"productschedules":{
			"type":"array",
			"items":{"$ref": "../definitions/uuidv4.json"}
		},
		"emailtemplates":{
			"type":"array",
			"items":{"$ref": "../definitions/uuidv4.json"}
		},
		"affiliate_allow":{
			"type":"array",
			"items":{
				"anyOf":[
					{"$ref": "../definitions/uuidv4.json"},
					{"type": "string", "enum":["*"]}
				]
			}
		},
		"affiliate_deny":{
			"type":"array",
			"items":{
				"anyOf":[
					{"$ref": "../definitions/uuidv4.json"},
					{"type": "string", "enum":["*"]}
				]
			}
		},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["account", "name", "show_prepaid", "allow_prepaid", "created_at", "updated_at"]
}
