{
	"$schema": "http://json-schema.org/schema#",
	"id":"/campaign",
	"title": "Campaign",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "model/definitions/uuidv4.json"},
		"ISO8601": {"$ref": "model/definitions/iso8601.json"},
		"SixAccountIdentifier":{"$ref": "model/definitions/sixcrmidentifier.json"}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"allow_prepaid":{
			"type":"boolean"
		},
		"show_prepaid":{
			"type":"boolean"
		},
		"name":{
			"type":"string",
			"minLength":3
		},
		"productschedules":{
			"type":"array",
			"items":{"$ref": "#/definitions/UUIDv4"}
		},
		"emailtemplates":{
			"type":"array",
			"items":{"$ref": "#/definitions/UUIDv4"}
		},
		"affiliate_allow":{
			"type":"array",
			"items":{
				"anyOf":[
					{"$ref": "#/definitions/UUIDv4"},
					{"type": "string", "enum":["*"]}
				]
			}
		},
		"affiliate_deny":{
			"type":"array",
			"items":{
				"anyOf":[
					{"$ref": "#/definitions/UUIDv4"},
					{"type": "string", "enum":["*"]}
				]
			}
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["account", "name", "show_prepaid", "allow_prepaid", "created_at", "updated_at"]
}
