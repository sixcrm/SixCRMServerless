{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "model/entities/campaign.json",
	"title": "Campaign",
	"type": "object",
	"description": "A single campaign",
	"properties": {
		"id": {
			"$ref": "../definitions/uuidv4.json",
			"description": "ID of campaign"
		},
		"account": {
			"$ref": "../definitions/sixcrmaccountidentifier.json"
		},
		"allow_prepaid": {
			"type": "boolean"
		},
		"show_prepaid": {
			"type": "boolean"
		},
		"name": {
			"type": "string",
			"minLength": 3
		},
		"description": {
			"type": "string"
		},
		"allow_on_order_form": {
			"type": "boolean"
		},
		"emailtemplates": {
			"type": "array",
			"items": {
				"$ref": "../definitions/uuidv4.json"
			}
		},
		"affiliate_allow": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"$ref": "../definitions/uuidv4.json"
					},
					{
						"type": "string",
						"enum": [
							"*"
						]
					}
				]
			}
		},
		"affiliate_deny": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"$ref": "../definitions/uuidv4.json"
					},
					{
						"type": "string",
						"enum": [
							"*"
						]
					}
				]
			}
		},
		"created_at": {
			"$ref": "../definitions/iso8601.json"
		},
		"updated_at": {
			"$ref": "../definitions/iso8601.json"
		}
	},
	"required": [
		"account",
		"name",
		"allow_in_order_creation",
		"show_prepaid",
		"allow_prepaid",
		"created_at",
		"updated_at"
	]
}
