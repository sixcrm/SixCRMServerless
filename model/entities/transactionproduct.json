{
	"$schema": "http://json-schema.org/schema#",
	"id":"/TransactionProduct",
	"title": "Transaction Product",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"CURRENCY":{
			"type":"string",
			"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
		}
	},
	"properties": {
		"product":{"$ref": "#/definitions/UUIDv4"},
		"amount":{"$ref": "#/definitions/CURRENCY"}
	},
	"required":["product", "amount"]
}
