{
	"$schema": "http://json-schema.org/schema#",
	"id":"/entityacl",
	"title": "Entity ACL",
	"type": "object",
	"description": "Entity's access control list",
	"properties": {
		"entity":{"$ref": "../definitions/uuidv4.json"},
		"type":{"$ref": "../definitions/sixcrmentitytypes.json"},
		"allow":{
			"type":"array",
			"items":{"$ref": "../definitions/resourceidentifier.json"}
		},
		"deny":{
			"type":"array",
			"items":{"$ref": "../definitions/resourceidentifier.json"}
		},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["entity", "type", "created_at", "updated_at"],
	"anyOf": [
		{
			"required": ["allow"]
		},
		{
			"required": ["deny"]
		}
	]
}
