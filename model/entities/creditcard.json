{
	"$schema": "http://json-schema.org/schema#",
	"id":"/creditcard",
	"title": "Credit Card",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "model/definitions/uuidv4.json"},
		"ISO8601": {"$ref": "model/definitions/iso8601.json"},
		"SixAccountIdentifier":{"$ref": "model/definitions/sixcrmidentifier.json"},
		"CreditCardExpirationDate": {
			"type": "string",
			"pattern":"^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$"
		},
		"CreditCardCCV":{
			"type":"string",
			"pattern":"^[0-9]{3,4}$"
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"address":{
			"type":"object",
			"properties": {
				"line1":{
					"type":"string"
				},
				"line2":{
					"type":"string"
				},
				"city":{
					"type":"string"
				},
				"state":{
					"type":"string"
				},
				"zip":{
					"type":"string"
				},
				"country":{
					"type":"string"
				}
			},
			"required":["line1","city","state","zip","country"]
		},
		"number":{
			"type":"string",
			"minLength":12
		},
		"ccv":{"$ref": "#/definitions/CreditCardCCV"},
		"expiration":{"$ref": "#/definitions/CreditCardExpirationDate"},
		"name":{
			"type":"string",
			"minLength":2
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["account", "address", "number", "expiration","ccv", "name", "created_at", "updated_at"]
}
