{
	"$schema": "http://json-schema.org/schema#",
	"id":"/productschedule",
	"title": "Product Schedule",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		},
		"OptionalUUIDv4":{
			"anyOf":[
				{"type":"string", "enum":[""]},
				{"$ref": "#/definitions/UUIDv4"}
			]
		},
		"SixAccountIdentifier":{
			"anyOf":[
				{"$ref": "#/definitions/UUIDv4"},
				{"type":"string", "enum":["*"]}
			]
		},
		"CURRENCY":{
			"anyOf":[
				{
					"type":"string",
					"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
				},
				{
					"type":"number",
					"minimum": 0,
					"multipleOf":0.01
				}
			]
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"name":{
			"type":"string",
			"minLength":3
		},
		"schedule":{
			"type":"array",
			"items":{
				"type":"object",
				"properties":{
					"product_id":{"$ref": "#/definitions/UUIDv4"},
					"price":{"$ref": "#/definitions/CURRENCY"},
					"start":{
						"type":"integer",
						"minimum": 0,
						"exclusiveMinimum": false
					},
					"end":{
						"type":"integer",
						"minimum": 0,
						"exclusiveMinimum": false
					},
					"period":{
						"type":"integer",
						"minimum": 0,
						"exclusiveMinimum": false
					}
				},
				"required":["product_id", "price", "start", "period"]
			}
		},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["name", "schedule", "account", "created_at", "updated_at"]
}
