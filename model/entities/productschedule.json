{
	"$schema": "http://json-schema.org/schema#",
	"id":"/productschedule",
	"title": "Product Schedule",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "../definitions/uuidv4.json"},
		"ISO8601": {"$ref": "../definitions/iso8601.json"},
		"OptionalUUIDv4":{"$ref": "../definitions/optionaluuidv4.json"},
		"SixAccountIdentifier":{"$ref": "../definitions/sixcrmidentifier.json"},
		"CURRENCY":{
			"anyOf":[
				{
					"type":"string",
					"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
				},
				{
					"type": "number", "minimum":0.01
				}
			]
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"name":{
			"type":"string",
			"minLength":3
		},
		"loadbalancer":{"$ref": "#/definitions/UUIDv4"},
		"schedule":{
			"type":"array",
			"items":{
				"type":"object",
				"properties":{
					"product_id":{"$ref": "#/definitions/UUIDv4"},
					"price":{"$ref": "#/definitions/CURRENCY"},
					"start":{
						"type":"integer",
						"minimum": 0,
						"exclusiveMinimum": false
					},
					"end":{
						"type":"integer",
						"minimum": 0,
						"exclusiveMinimum": false
					},
					"period":{
						"type":"integer",
						"minimum": 0,
						"exclusiveMinimum": false
					}
				},
				"required":["product_id", "price", "start", "period"]
			}
		},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["name", "schedule", "account", "created_at", "updated_at"]
}
