{
	"$schema": "http://json-schema.org/schema#",
	"id":"/user",
	"title": "User",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "model/definitions/uuidv4.json"},
		"ISO8601": {"$ref": "model/definitions/iso8601.json"}
	},
	"properties": {
		"id":{
			"type":"string",
			"format":"email"
		},
		"name":{
			"type":"string",
			"minLength":3
		},
		"first_name":{
			"type":"string",
			"minLength":3
		},
		"last_name":{
			"type":"string",
			"minLength":3
		},
		"auth0_id":{
			"type":"string",
			"minLength":3
		},
		"active":{
			"type":"boolean"
		},
		"termsandconditions":{
			"type":"string",
			"minLength":2
		},
		"alias":{
			"type":"string",
			"minLength":40,
			"maxLength":40,
			"pattern":"[a-z0-9]*"
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "name", "first_name", "last_name", "active", "alias", "created_at", "updated_at"]
}
