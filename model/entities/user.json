{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id":"/entities/user.json",
	"title": "User",
	"type": "object",
	"description": "A user",
	"properties": {
		"id":{"$ref": "../definitions/useridentifier.json"},
		"name":{
			"type":"string",
			"minLength":3
		},
		"first_name":{
			"type":"string",
			"minLength":1
		},
		"last_name":{
			"type":"string",
			"minLength":1
		},
		"auth0_id":{"$ref": "../definitions/auth0identifier.json"},
		"active":{
			"type":"boolean"
		},
		"termsandconditions":{"$ref": "../definitions/tocidentifier.json"},
		"alias":{"$ref": "../definitions/useralias.json"},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["id", "name", "active", "alias", "created_at", "updated_at"]
}
