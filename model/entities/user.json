{
	"$schema": "http://json-schema.org/schema#",
	"id":"/user",
	"title": "User",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		}
	},
	"properties": {
		"id":{
			"type":"string",
			"format":"email"
		},
		"name":{
			"type":"string",
			"minLength":3
		},
		"first_name":{
			"type":"string",
			"minLength":3
		},
		"last_name":{
			"type":"string",
			"minLength":3
		},
		"auth0_id":{
			"type":"string",
			"minLength":3
		},
		"active":{
			"type":"boolean"
		},
		"termsandconditions":{
			"type":"string",
			"minLength":2
		},
		"alias":{
			"type":"string",
			"minLength":40,
			"maxLength":40,
			"pattern":"[a-z0-9]*"
		},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "name", "first_name", "last_name", "active", "alias", "created_at", "updated_at"]
}
