{
	"$schema": "http://json-schema.org/schema#",
	"id":"/product",
	"title": "Product",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "../definitions/uuidv4.json"},
		"ISO8601": {"$ref": "../definitions/iso8601.json"},
		"OptionalUUIDv4":{"$ref": "../definitions/optionaluuidv4.json"},
		"SixAccountIdentifier":{"$ref": "../definitions/sixcrmidentifier.json"},
		"CURRENCY":{
			"anyOf":[
				{
					"type":"string",
					"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
				},
				{
					"type": "number", "minimum":0.01
				}
			]
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"name":{
			"type":"string",
			"minLength":3
		},
		"sku":{
			"type":"string",
			"minLength":3
		},
		"ship":{
			"type":"boolean"
		},
		"shipping_delay":{
			"type": "integer",
			"minimum": 0,
			"exclusiveMinimum": false
		},
		"fulfillment_provider":{"$ref": "#/definitions/UUIDv4"},
		"default_price":{"$ref": "#/definitions/CURRENCY"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["name", "sku","ship", "account", "created_at", "updated_at"]
}
