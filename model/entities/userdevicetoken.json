{
	"$schema": "http://json-schema.org/schema#",
	"id":"/userdevicetoken",
	"title": "User Device Token",
	"type": "object",
	"definitions": {
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		},
		"DeviceToken":{
			"type": "string",
			"pattern":"^[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}$"
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/DeviceToken"},
		"user":{"type":"string", "format":"email"},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "user", "created_at", "updated_at"]
}
