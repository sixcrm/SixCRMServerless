{
	"$schema": "http://json-schema.org/schema#",
	"id":"/userdevicetoken",
	"title": "User Device Token",
	"type": "object",
	"definitions": {
		"DeviceToken":{
			"type": "string",
			"pattern":"^[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}\\s[a-fA-F0-9]{8}$"
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/DeviceToken"},
		"user":{"type":"string", "format":"email"},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["id", "user", "created_at", "updated_at"]
}
