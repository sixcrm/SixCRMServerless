{
	"$schema": "http://json-schema.org/schema#",
	"id":"/Transaction",
	"title": "Transaction",
	"type": "object",
	"definitions": {
		"CURRENCY":{
			"anyOf":[
				{
					"type":"string",
					"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
				},
				{
					"type":"number",
					"minimum": 0
				}
			]
		}
	},
	"properties": {
		"id":{"$ref": "../definitions/uuidv4.json"},
		"account":{"$ref": "../definitions/sixcrmidentifier.json"},
		"rebill":{"$ref": "../definitions/uuidv4.json"},
		"alias":{
			"type":"string",
			"pattern":"^T[0-9A-Z]{9}$"
		},
		"products":{
			"type":"array",
			"items":{
				"type": "object",
				"properties": {
					"product":{"$ref": "../definitions/uuidv4.json"},
					"amount":{"$ref": "#/definitions/CURRENCY"}
				},
				"required":["product", "amount"]
			},
			"minItems": 1
		},
		"processor_response":{
			"type":"string"
		},
		"merchant_provider":{"$ref": "../definitions/uuidv4.json"},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["id", "alias", "account", "rebill", "products", "processor_response", "merchant_provider", "created_at", "updated_at"]
}
