{
	"$schema": "http://json-schema.org/schema#",
	"id":"/transaction",
	"title": "Transaction",
	"type": "object",
	"description": "A transaction",
	"properties": {
		"id":{"$ref": "../definitions/uuidv4.json"},
		"account":{"$ref": "../definitions/sixcrmaccountidentifier.json"},
		"rebill":{"$ref": "../definitions/uuidv4.json"},
		"alias":{"$ref": "../definitions/transactionalias.json"},
		"products":{
			"type":"array",
			"items":{
				"type": "object",
				"description": "A connection between transaction and a product",
				"properties": {
					"product":{"$ref": "../../definitions/uuidv4.json"},
					"amount":{"$ref": "../../definitions/currency.json"}
				},
				"required":["product", "amount"]
			}
		},
		"processor_response":{
			"type":"string"
		},
		"merchant_provider":{"$ref": "../definitions/uuidv4.json"},
		"associated_transaction":{"$ref": "../definitions/uuidv4.json"},
		"type":{"$ref":"../functional/register/transactiontype.json"},
		"result":{"$ref":"../functional/register/transactionresult.json"},
		"amount":{
			"type": {"$ref": "../definitions/currency.json"}
		},
		"created_at":{"$ref": "../definitions/iso8601.json"},
		"updated_at":{"$ref": "../definitions/iso8601.json"}
	},
	"required":["id", "alias", "account", "rebill", "products", "processor_response", "merchant_provider", "created_at", "updated_at", "type", "result", "amount"]
}
