{
	"$schema": "http://json-schema.org/schema#",
	"id":"/Transaction",
	"title": "Transaction",
	"type": "object",
	"definitions": {
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		},
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"CURRENCY":{
			"anyOf":[
				{
					"type":"string",
					"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
				},
				{
					"type":"number",
					"minimum": 0,
					"multipleOf":0.01
				}
			]
		},
		"SixAccountIdentifier":{
			"anyOf":[
				{"$ref": "#/definitions/UUIDv4"},
				{"type":"string", "enum":["*"]}
			]
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"account":{"$ref": "#/definitions/SixAccountIdentifier"},
		"rebill":{"$ref": "#/definitions/UUIDv4"},
		"alias":{
			"type":"string",
			"pattern":"^T[0-9A-Z]{9}$"
		},
		"products":{
			"type":"array",
			"items":{
				"type": "object",
				"properties": {
					"product":{"$ref": "#/definitions/UUIDv4"},
					"amount":{"$ref": "#/definitions/CURRENCY"}
				},
				"required":["product", "amount"]
			},
			"minItems": 1
		},
		"processor_response":{
			"type":"string"
		},
		"merchant_provider":{"$ref": "#/definitions/UUIDv4"},
		"created_at":{"$ref": "#/definitions/ISO8601"},
		"updated_at":{"$ref": "#/definitions/ISO8601"}
	},
	"required":["id", "alias", "account", "rebill", "products", "processor_response", "merchant_provider", "created_at", "updated_at"]
}
