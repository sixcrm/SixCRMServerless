{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id":"/entities/meta/product.json",
	"title": "Product",
	"type": "object",
	"description": "A product",
	"properties": {
		"id":{"$ref": "../../definitions/uuidv4.json"},
		"name":{
			"type":"string",
			"minLength":3
		},
		"description":{
			"type":"string"
		},
		"sku": {
			"anyOf":[
				{"type":"null"},
				{"type":"string", "minLength":3}
			]
		}		,
		"ship":{
			"type":"boolean"
		},
		"attributes":{"$ref": "../components/productattributes.json"}
	},
	"required":["name"]
}
