{
  "$schema": "http://json-schema.org/schema#",
  "id": "/definitions/address.json",
  "title": "Address",
  "description": "An address",
  "type":"object",
  "properties": {
    "line1":{
      "type":"string"
    },
    "line2":{
      "type":"string"
    },
    "city":{
      "type":"string"
    },
    "state":{
      "type":"string",
      "pattern":"^[A-Z]{2}$"
    },
    "zip":{
      "anyOf":[
        {
          "type":"string",
          "pattern":"^[0-9]{5}$"
        },
        {
          "type":"string",
          "pattern":"^[0-9]{5}-[0-9]{4}$"
        },
        {
          "type":"number",
          "minimum":10000,
          "maximum":99999
        }
      ]
    },
    "country":{
      "type":"string",
      "pattern":"^[A-Z]{2}$"
    }
  },
  "required":["line1","city","state","zip","country"]
}
