{
	"$schema": "http://json-schema.org/schema#",
	"id":"/merchantprovidersummary.json",
	"title": "Merchant Provider Summary",
	"type": "object",
	"definitions": {
		"UUIDv4": {"$ref": "../definitions/uuidv4.json"},
		"CURRENCY":{
			"anyOf":[
				{
					"type":"string",
					"pattern":"^\\$[0-9]+\\.[0-9]{2}$"
				},
				{
					"type":"number",
					"minimum": 0
				}
			]
		}
	},
	"properties": {
		"merchantprovider":{
			"type":"object",
			"properties":{
				"id":{"$ref": "#/definitions/UUIDv4"}
			},
			"required":["id"]
		},
		"summary":{
			"type":"object",
			"properties":{
				"today":{
					"type":"object",
					"properties":{
						"amount":{"$ref":"#/definitions/CURRENCY"},
						"count":{
							"type":"integer",
							"minimum":0,
							"exclusiveMinimum": false
						}
					},
					"required":["amount","count"]
				},
				"thisweek":{
					"type":"object",
					"properties":{
						"amount":{"$ref":"#/definitions/CURRENCY"},
						"count":{
							"type":"integer",
							"minimum":0,
							"exclusiveMinimum": false
						}
					},
					"required":["amount","count"]
				},
				"thismonth":{
					"type":"object",
					"properties":{
						"amount":{"$ref":"#/definitions/CURRENCY"},
						"count":{
							"type":"integer",
							"minimum":0,
							"exclusiveMinimum": false
						}
					},
					"required":["amount","count"]
				}
			},
			"required":["today","thisweek","thismonth"]
		}
	},
	"required":["merchantprovider", "summary"]
}
