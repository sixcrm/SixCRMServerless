{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id":"/endpoints/components/customer.json",
	"title": "Customer",
	"type": "object",
	"properties": {
		"email":{
			"type":"string",
			"format":"email"
		},
		"firstname":{
			"type":"string",
			"minLength": 1
		},
		"lastname":{
			"type":"string",
			"minLength": 1
		},
		"phone":{"$ref":"../../definitions/phone.json"},
		"address":{"$ref": "../../definitions/address.json"},
		"creditcards":{
			"type":"array",
			"items":{"$ref": "./creditcard.json"}
		}
	},
	"required":["email", "firstname", "lastname", "address"]
}
