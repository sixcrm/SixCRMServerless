{
	"$schema": "http://json-schema.org/schema#",
	"id":"/components/creditcard",
	"title": "Credit Card",
	"type": "object",
	"definitions": {
		"CreditCardExpirationDate": {
			"type": "string",
			"pattern":"^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$"
		},
		"CreditCardCCV":{
			"type":"string",
			"pattern":"^[0-9]{3,4}$"
		}
	},
	"properties": {
		"address":{"$ref": "/address"},
		"number":{
			"type":"string",
			"minLength":12
		},
		"ccv":{"$ref": "#/definitions/CreditCardCCV"},
		"expiration":{"$ref": "#/definitions/CreditCardExpirationDate"},
		"name":{
			"type":"string",
			"minLength":2
		}
	},
	"required":["address", "number", "expiration","ccv", "name"]
}
