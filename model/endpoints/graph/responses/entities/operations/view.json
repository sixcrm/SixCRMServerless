{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "/viewentity",
  "type": "object",

  "allOf": [
    { "$ref": "../../graph" },
    {
      "properties": {

        "response" :{

          "properties": {

            "data": {

              "patternProperties": {

                ".+": {
                  "anyOf": [
                    { "$ref": "../entity" },
                    { "type": "null" }
                  ]
                }

              },
              "maxProperties": 1,
              "minProperties": 1

            }

          },
          "required":["data"]

        }

      },
      "required":["response"]
    }
  ]

}
