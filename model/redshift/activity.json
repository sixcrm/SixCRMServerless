{
	"$schema": "http://json-schema.org/schema#",
	"id":"/RedshiftActivityRowObject",
	"type": "object",
	"definitions": {
		"UUIDv4": {
			"type": "string",
			"pattern":"^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[89ABab][0-9A-Fa-f]{3}-[0-9A-Fa-f]{12}$"
		},
		"ISO8601": {
			"type": "string",
			"pattern":"^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(.[0-9]+)?(([+-][0-9]{2}:[0-9]{2})|Z)?$"
		},
		"OptionalUUIDv4":{
			"anyOf":[
				{"type":"string", "enum":[""]},
				{"$ref": "#/definitions/UUIDv4"}
			]
		},
		"SixDynamoIdentifier":{
			"anyOf":[
				{"$ref": "#/definitions/UUIDv4"},
				{"type":"string", "format":"email"},
				{"type":"string", "enum":["*","system"]}
			]
		},
		"OptionalSixDynamoIdentifier":{
			"anyOf":[
				{"type":"string", "enum":[""]},
				{"$ref": "#/definitions/SixDynamoIdentifier"}
			]
		},
		"SixActivityActorTypes":{
			"type":"string",
			"enum":["customer","user","system"]
		},
		"SixEntityTypes":{
			"type":"string"
		}
	},
	"properties": {
		"id":{"$ref": "#/definitions/UUIDv4"},
		"datetime":{"$ref": "#/definitions/ISO8601"},
		"actor": {"$ref": "#/definitions/UUIDv4"},
		"actor_type": {"$ref": "#/definitions/SixActivityActorTypes"},
		"action":{
			"type":"string"
		},
		"acted_upon":{"$ref": "#/definitions/OptionalUUIDv4"},
		"acted_upon_type": {"$ref": "#/definitions/SixEntityTypes"},
		"associated_with": {"$ref": "#/definitions/OptionalUUIDv4"},
		"associated_with_type": {"$ref": "#/definitions/SixEntityTypes"}
	},
	"required":["id","datetime","actor","actor_type","action"]
}
