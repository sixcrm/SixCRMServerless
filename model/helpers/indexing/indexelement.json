{
  "$schema": "http://json-schema.org/schema#",
	"id":"/indexedelements.json",
	"title": "Indexed Element",
	"type": "object",
  "properties":{
    "index_action":{
      "entity_type":"string",
      "enum":["add", "delete"]
    },
    "entity_type":{
      "type": "string",
      "enum":["campaign","credit_card","merchant_provider","product_schedule","product","shipping_receipt","customer","transaction","affiliate"]
    },
    "id":{"$ref":"../../definitions/sixcrmidentifier.json"},
    "active":{"$ref":"../../definitions/active.json"},
    "email":{
      "type":"string",
      "format":"email"
    },
    "firstname":{"$ref":"../../definitions/firstname.json"},
    "lastname":{"$ref":"../../definitions/firstname.json"},
    "name":{
      "type":"string",
      "minLength":1
    },
    "phone":{"$ref":"../../definitions/phone.json"},
    "sku": {"$ref":"../../definitions/sku.json"},
    "tracking_number": {"$ref":"../../definitions/trackingnumber.json"},
    "address":{"$ref":"../../definitions/address.json"},
    "amount":{"$ref":"../../definitions/currency.json"},
    "alias":{"$ref":"../../definitions/transactionalias.json"},
    "first_six":{"$ref":"../../definitions/creditcardfirstsix.json"},
    "last_four":{"$ref":"../../definitions/creditcardlastfour.json"},
    "account":{"$ref":"../../definitions/sixcrmaccountidentifier.json"},
    "created_at":{"$ref":"../../definitions/iso8601.json"},
    "updated_at":{"$ref":"../../definitions/iso8601.json"},
    "address_line_1":{
      "type":"string"
    },
    "address_line_2":{
      "type":"string"
    },
    "city":{
      "type":"string"
    },
    "state":{"$ref": "../../definitions/statecode.json"},
    "zip":{"$ref": "../../definitions/zipcode.json"},
    "country":{"$ref": "../../definitions/countrycode.json"},
    "affiliate_id":{
      "type":"string"
    }
  },
  "required":["index_action","entity_type"]
}
