{
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "/functional/NMI/process.json",
	"title": "NMI Merchant Provider Process Object",
	"type": "object",
	"properties": {
		"type":{
			"type":"string",
			"enum":["sale"]
		},
		"username":{
			"type":"string"
		},
		"password":{
			"type":"string"
		},
		"processor_id":{
			"type":"string"
		},
		"endpoint":{
			"type":"string",
			"format":"uri"
		},
		"amount":{"$ref": "../../definitions/currency.json"},
		"ccnumber":{"$ref": "../../definitions/creditcardnumber.json"},
		"ccv":{"$ref": "../../definitions/creditcardcvv.json"},
		"ccexp":{"$ref": "../../definitions/creditcardexpirationdate.json"},
		"firstname":{
			"type":"string"
		},
		"lastname":{
			"type":"string"
		},
		"address1":{
			"type":"string"
		},
		"address2":{
			"type":"string"
		},
		"city":{
			"type":"string"
		},
		"state":{"$ref": "../../definitions/statecode.json"},
		"zip":{"$ref": "../../definitions/zipcode.json"},
		"country":{"$ref": "../../definitions/countrycode.json"},
		"shipping_address1":{
			"type":"string"
		},
		"shipping_address2":{
			"type":"string"
		},
		"shipping_city":{
			"type":"string"
		},
		"shipping_state":{"$ref": "../../definitions/statecode.json"},
		"shipping_zip":{"$ref": "../../definitions/zipcode.json"},
		"shipping_country":{"$ref": "../../definitions/countrycode.json"}
	},
	"required":["type", "username", "password", "endpoint", "amount", "ccnumber","ccexp","firstname","lastname"]
}
