{
  "name": "sixcrm-transaction-api",
  "version": "1.0.0",
  "description": "Backend Processing Lambda Endpoints",
  "main": "index.js",
  "dependencies": {
    "apn": "^2.1.4",
    "chalk": "^1.1.3",
    "crypto": "0.0.3",
    "graphql": "^0.8.2",
    "js-yaml": "^3.7.0",
    "jsonschema": "^1.1.1",
    "jsonwebtoken": "^7.2.1",
    "moment": "^2.18.1",
    "pg": "^6.1.5",
    "querystring": "^0.2.0",
    "randomstring": "^1.1.5",
    "redis": "^2.7.1",
    "request": "^2.79.0",
    "require-yaml": "0.0.1",
    "underscore": "^1.8.3",
    "uuid": "^3.0.1",
    "validator": "^6.2.0",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "aws-sdk": "^2.7.13",
    "bluebird": "^3.5.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-json-schema": "^1.4.0",
    "child-process-promise": "^2.2.1",
    "eslint": "^3.18.0",
    "eslint-plugin-promise": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mockery": "^2.0.0",
    "pre-commit": "^1.2.2",
    "serverless": "^1.6.0",
    "serverless-dynamodb-local": "0.2.18",
    "serverless-mocha-plugin": "^1.3.2",
    "supertest": "^2.0.1"
  },
  "scripts": {
    "test-integration": "node ./node_modules/mocha/bin/mocha --require test/config/global.js test/bootstrap.test.js test/integration/**/*.test.js",
    "test-unit": "istanbul cover node_modules/.bin/_mocha  -- --require test/config/global.js test/bootstrap.test.js --recursive  './test/unit/**/*.spec.js'",
    "test-local-integration": "ENV=local mocha ./test/integration/local/createOrder/createOrder.test.js",
    "test-functional": "ENV=local AWS_PROFILE=six istanbul cover node_modules/.bin/_mocha --recursive './test/functional/*.test.js'",
    "test-workers": "istanbul cover node_modules/.bin/_mocha  -- --require test/config/global.js test/bootstrap.test.js --recursive './test/unit/workers/**/*.spec.js'",
    "test-endpoints": "istanbul cover _mocha  -- --require test/config/global.js test/bootstrap.test.js './test/unit/endpoints/**/*.spec.js'",
    "lint": "eslint --ignore-pattern 'coverage/**' --ignore-pattern '**/*test.js' --ignore-pattern '**/*spec.js' '**/*.js'",
    "lintCommit": "./tools/lintCommit.sh",
    "deploy-tables": "export SIX_VERBOSE=6; node ./deployment/dynamodb/deploy_tables.js",
    "purge-tables": "export SIX_VERBOSE=6; node ./deployment/dynamodb/purge_tables.js"
  },
  "pre-commit": [
    "lintCommit",
    "test-unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TimothyDalbey/sixcrmtransactionapi.git"
  },
  "author": "Timothy Dalbey",
  "license": "ISC",
  "homepage": "https://github.com/TimothyDalbey/sixcrmtransactionapi#readme"
}
