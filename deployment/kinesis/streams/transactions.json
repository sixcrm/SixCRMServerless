{
  "DeliveryStreamName": "transactions",
  "RedshiftDestinationConfiguration": {
    "ClusterJDBCURL": "jdbc:redshift://{{redshift_host}}:{{redshift_port}}/{{redshift_database}}",
    "CopyCommand": {
      "DataTableName": "f_transactions",
      "CopyOptions": "json 'auto' timeformat 'YYYY-MM-DDTHH:MI:SS'"
    },
    "Password": "{{redshift_password}}",
    "Username": "{{redshift_username}}",
    "RoleARN":  "arn:aws:iam::{{aws_account_id}}:role/sixcrm_kinesis_firehose_delivery_role",
    "S3Configuration": {
      "BucketARN": "arn:aws:s3:::sixcrm-{{stage}}-kinesis-activity",
      "RoleARN": "arn:aws:iam::{{aws_account_id}}:role/sixcrm_kinesis_firehose_delivery_role",
      "BufferingHints": {
        "IntervalInSeconds": 60,
        "SizeInMBs": 1
      },
      "CompressionFormat": "UNCOMPRESSED",
      "Prefix": "sixcrm-kinesis-transactions/"
    },
    "RetryOptions": {
      "DurationInSeconds": 1
    },
    "S3BackupMode": "Disabled"
  }
}
