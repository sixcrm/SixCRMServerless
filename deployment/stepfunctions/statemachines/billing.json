{
  "Comment": "The Billing State Machine",
  "StartAt": "Bill",
  "States": {
    "Bill": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-bill",
      "Next": "Is Success?",
      "ResultPath": "$.status",
      "Retry" : [
          {
            "ErrorEquals": [ "State.ALL" ],
            "IntervalSeconds": 300,
            "MaxAttempts": 5,
            "BackoffRate": 2
          }
      ]
    },
    "Is Success?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.status",
          "StringEquals": "DECLINE",
          "Next": "Trigger Recovery"
        },
        {
          "Variable": "$.status",
          "StringEquals": "HARDDECLINE",
          "Next": "Hard Declined"
        }
      ],
      "Default":"Successfully Billed"
    },
    "Successfully Billed":{
      "Type":"Parallel",
      "End":true,
      "Branches":[
        {
          "StartAt":"Trigger Pre-Fulfillment",
          "States":{
            "Trigger Pre-Fulfillment": {
              "Type": "Task",
              "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-triggerprefulfillment",
              "End": true,
              "ResultPath": "$.status",
              "Retry" : [
                  {
                    "ErrorEquals": [ "State.ALL" ],
                    "IntervalSeconds": 3,
                    "MaxAttempts": 5,
                    "BackoffRate": 5
                  }
              ]
            }
          }
        },
        {
          "StartAt":"Get Rebill Session",
          "States":{
            "Get Rebill Session":{
              "Type": "Task",
              "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-getrebillsession",
              "Next": "Trigger Create Rebill",
              "ResultPath": "$.guid",
              "Retry" : [
                  {
                    "ErrorEquals": [ "State.ALL" ],
                    "IntervalSeconds": 3,
                    "MaxAttempts": 5,
                    "BackoffRate": 5
                  }
              ]
            },
            "Trigger Create Rebill": {
              "Type": "Task",
              "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-triggercreaterebill",
              "End": true,
              "ResultPath": "$.status",
              "Retry" : [
                  {
                    "ErrorEquals": [ "State.ALL" ],
                    "IntervalSeconds": 3,
                    "MaxAttempts": 5,
                    "BackoffRate": 5
                  }
              ]
            }
          }
        }
      ]
    },
    "Trigger Recovery": {
      "Type": "Task",
      "Next":"Recovery Triggered",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-triggerrecovery",
      "ResultPath": "$.status",
      "Retry" : [
        {
          "ErrorEquals": [ "State.ALL" ],
          "IntervalSeconds": 3,
          "MaxAttempts": 5,
          "BackoffRate": 5
        }
      ]
    },
    "Recovery Triggered": {
      "Type":"Succeed"
    },
    "Hard Declined": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-cleanupdecline",
      "ResultPath": "$.status",
      "Next":"Hard Decline Failure",
      "Retry" : [
        {
          "ErrorEquals": [ "State.ALL" ],
          "IntervalSeconds": 3,
          "MaxAttempts": 5,
          "BackoffRate": 5
        }
      ]
    },
    "Hard Decline Failure": {
      "Type": "Fail",
      "Cause": "Hard decline issued by the recover task",
      "Error": "Recovery returned Hard Decline"
    }
  }
}
