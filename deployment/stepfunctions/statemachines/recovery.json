{
  "Comment": "The Recovery State Machine",
  "StartAt": "Get Recovery Date",
  "States": {
    "Get Recovery Date": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-getrecoverdate",
      "Next": "Wait For Recovery Date",
      "ResultPath": "$.recoverdate",
      "Retry" : [
          {
            "ErrorEquals": [ "State.ALL" ],
            "IntervalSeconds": 2,
            "MaxAttempts": 5,
            "BackoffRate": 5
          }
      ]
    },
    "Wait For Recovery Date": {
      "Type": "Wait",
      "TimestampPath": "$.recoverdate",
      "Next": "Bill"
    },
    "Bill": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-bill",
      "Next": "Is Success?",
      "ResultPath": "$.status",
      "Retry" : [
          {
            "ErrorEquals": [ "State.ALL" ],
            "IntervalSeconds": 3,
            "MaxAttempts": 5,
            "BackoffRate": 5
          }
      ]
    },
    "Is Success?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.status",
          "StringEquals": "DECLINE",
          "Next": "Recover Declined"
        },
        {
          "Variable": "$.status",
          "StringEquals": "HARDDECLINE",
          "Next": "Hard Declined"
        }
      ],
      "Default":"Successfully Billed"
    },
    "Successfully Billed":{
      "Type":"Parallel",
      "End":true,
      "Branches":[
        {
          "StartAt":"Trigger Pre-Fulfillment",
          "States":{
            "Trigger Pre-Fulfillment": {
              "Type": "Task",
              "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-triggerprefulfillment",
              "End": true,
              "ResultPath": "$.status",
              "Retry" : [
                  {
                    "ErrorEquals": [ "State.ALL" ],
                    "IntervalSeconds": 3,
                    "MaxAttempts": 5,
                    "BackoffRate": 5
                  }
              ]
            }
          }
        },
        {
          "StartAt":"Get Rebill Session",
          "States":{
            "Get Rebill Session":{
              "Type": "Task",
              "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-getrebillsession",
              "Next": "Trigger Create Rebill",
              "ResultPath": "$.guid",
              "Retry" : [
                  {
                    "ErrorEquals": [ "State.ALL" ],
                    "IntervalSeconds": 3,
                    "MaxAttempts": 5,
                    "BackoffRate": 5
                  }
              ]
            },
            "Trigger Create Rebill": {
              "Type": "Task",
              "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-triggercreaterebill",
              "End": true,
              "ResultPath": "$.status",
              "Retry" : [
                  {
                    "ErrorEquals": [ "State.ALL" ],
                    "IntervalSeconds": 3,
                    "MaxAttempts": 5,
                    "BackoffRate": 5
                  }
              ]
            }
          }
        }
      ]
    },
    "Hard Declined": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-cleanupdecline",
      "ResultPath": "$.status",
      "Next":"Hard Decline Failure",
      "Retry" : [
        {
          "ErrorEquals": [ "State.ALL" ],
          "IntervalSeconds": 3,
          "MaxAttempts": 5,
          "BackoffRate": 5
        }
      ]
    },
    "Hard Decline Failure": {
      "Type": "Fail",
      "Cause": "Hard decline issued by the recover task",
      "Error": "Recovery returned Hard Decline"
    },
    "Recover Declined": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-cleanupdecline",
      "ResultPath": "$.status",
      "Next":"Decline Failure",
      "Retry" : [
          {
            "ErrorEquals": [ "State.ALL" ],
            "IntervalSeconds": 3,
            "MaxAttempts": 5,
            "BackoffRate": 5
          }
      ]
    },
    "Decline Failure": {
      "Type": "Fail",
      "Cause": "AWS Batch Job Failed",
      "Error": "Trigger Fulfillment returned FAILED"
    }
  }
}
