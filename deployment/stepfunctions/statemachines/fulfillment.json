{
  "Comment": "The Fulfillment State Machine.  Note that this State Machine operates against a Rebill.",
  "StartAt": "Notify Fulfillment Providers",
  "States": {
    "Notify Fulfillment Providers": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-notifyfulfillmentproviders",
      "Next": "Trigger Post-Fulfillment",
      "InputPath": "$",
      "ResultPath": "$.status",
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "IntervalSeconds": 60,
          "MaxAttempts": 5,
          "BackoffRate": 5
        }
      ]
    },
    "Trigger Post-Fulfillment": {
      "Type": "Task",
      "Resource": "arn:aws:lambda:{{aws_region}}:{{aws_account_id}}:function:sixcrm-{{stage}}-triggerpostfulfillment",
      "End":true,
      "InputPath": "$",
      "ResultPath": "$.status",
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "IntervalSeconds": 60,
          "MaxAttempts": 5,
          "BackoffRate": 5
        }
      ]
    }
  }
}
